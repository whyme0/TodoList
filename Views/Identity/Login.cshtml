@model TodoList.Models.UserLoginModel
@{ 
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@if(TempData["PasswordResetOk"] != null) { <p class="text-success">@TempData["PasswordResetOk"]</p> }
@if(TempData["PasswordChangeOk"] != null) { <p class="text-success">@TempData["PasswordChangeOk"]</p> }

<div class="row">
    <div class="col-md-4">
        @Html.AntiForgeryToken()
        <form asp-action="Login" asp-route-ReturnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" autofocus/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a asp-action="ForgotPassword">Recover password</a> | <a asp-action="Registration">Create user</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}